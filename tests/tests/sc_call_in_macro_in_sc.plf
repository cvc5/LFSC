(declare term type)
(declare holds (! t term type))
(declare apply (! a1 term (! a2 term term)))
(declare f_not term)
(define not (# t term (apply f_not t)))
(declare f_or term)
(define or (# t1 term (# t2 term (apply (apply f_or t1) t2))))
(program sc_negate ((t term)) term (not t))
(program sc_split ((t term)) term
         (or t (sc_negate t)))
(declare split (! s1 term (! s2 term (! u (holds s1)
        (! r (^ (sc_split s1) s2)
           (holds s2))))))
(declare p term)
(check
(% a (holds p)
 (: (holds (or p (not p)))
    (split _ _ a)
)))
